   <scripts>
      <row>
         <process><![CDATA[! run book function to shutdown host
!
!
:SET &KEYS# = ""
:IF &UC4RB_SHUTDOWN_MODES# = "Shutdown"
:  SET &KEYS# = "/s"
:ELSE
:  IF &UC4RB_SHUTDOWN_MODES# = "Restart"
:    SET &KEYS# = "/r"
:  ELSE
:    IF &UC4RB_SHUTDOWN_MODES# = "Restart with apps"
:      SET &KEYS# = "/g"
:    ENDIF
:  ENDIF
:ENDIF

:IF &UC4RB_TIMEOUT# <> ""
:  SET &KEYS# = "&KEYS# /t &UC4RB_TIMEOUT#"
:ENDIF
@echo off
"%SYSTEMROOT%\system32\shutdown.exe" "&KEYS#"
set returncode=%errorlevel%
if %returncode% EQU 0 (
echo Host shutdown successfuly
) else (
echo Error occurred whilst shutting down the host.
)
exit /b %returncode%

:INCLUDE PCK.ITPA_SHARED.PRV.INCLUDE.CHECK_CMDLINE_CMD@WINDOWS]]></process>
